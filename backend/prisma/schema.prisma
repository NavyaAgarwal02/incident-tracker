generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = "file:./dev.db"
}

model Incident {
  id        String   @id @default(uuid())
  title     String
  service   String
  severity  String
  status    String
  owner     String?
  summary   String?
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@index([severity, status])
}
